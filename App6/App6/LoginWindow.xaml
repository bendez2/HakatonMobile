<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App6.MainPage">
    <Grid>
        <StackLayout Padding="5,150,5,50" Orientation="Vertical" VerticalOptions="StartAndExpand">
            <Label Text="Авторизация" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center" Margin="0, 0, 0, 30"/>
            <Entry x:Name="log"  Margin="20, 0, 20, 0" Placeholder="Логин" FontSize="20"/>
            <Entry x:Name="pass"  Margin="20, 0, 20, 100" Placeholder="Пароль" FontSize="20"/>
             </StackLayout>
        
        <StackLayout Padding="0,0,0,0" Margin="0,100,0,0" VerticalOptions="Center" Spacing="30" BackgroundColor="AliceBlue">
            <Button x:Name="input_But" Text="Войти" FontSize="20" Padding="0, 10, 0, 10" Margin="80, 0, 80, 0" CornerRadius="10" BackgroundColor="#FFD600" Clicked="LoginCliked_Button"/>
        </StackLayout>
    </Grid>
</ContentPage>
